@page
@model EmployeeAppraisal.Pages.Rating.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Rating</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Rating.RatingValue" class="control-label"></label>
                <input asp-for="Rating.RatingValue" class="form-control" />
                <span asp-validation-for="Rating.RatingValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating.DepartmentId" class="control-label"></label>
                <select asp-for="Rating.DepartmentId" class ="form-control" asp-items="ViewBag.DepartmentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Rating.Rank" class="control-label"></label>
                <input asp-for="Rating.Rank" class="form-control" />
                <span asp-validation-for="Rating.Rank" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
