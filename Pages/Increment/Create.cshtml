@model EmployeeAppraisal.Pages.Increment.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Appraisal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Appraisal.DepartmentId" class="control-label"></label>
                <select asp-for="Appraisal.DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId"></select>

            </div>
            <div class="form-group">
                <label asp-for="Appraisal.GradeId" class="control-label"></label>
                <select asp-for="Appraisal.GradeId" class="form-control" asp-items="ViewBag.GradeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Appraisal.RatingId" class="control-label"></label>
                <select asp-for="Appraisal.RatingId" class="form-control" asp-items="ViewBag.RatingId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Appraisal.Year" class="control-label"></label>
                <input asp-for="Appraisal.Year" class="form-control" />
                <span asp-validation-for="Appraisal.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appraisal.Increment" class="control-label"></label>
                <input asp-for="Appraisal.Increment" class="form-control" />
                <span asp-validation-for="Appraisal.Increment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
